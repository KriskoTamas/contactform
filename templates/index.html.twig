{% extends('base.html.twig') %}

{% block body %}

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}